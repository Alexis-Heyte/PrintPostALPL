<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="PrintPostBureau.Views.EventsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:PrintPostBureau"
    xmlns:vm="clr-namespace:PrintPostBureau.ViewModels"
    x:DataType="vm:EventsViewModel"
    mc:Ignorable="d"
    Title="Gestion des Commandes">
    
    <ContentPage.Content>
        <VerticalStackLayout Padding="20">
            <Entry x:Name="CommandeIdEntry" Placeholder="ID de la Commande" Keyboard="Numeric" />
            <Button Text="Rechercher" />
            <DatePicker x:Name="DateReelleDepotPicker" />
            <Button Text="Enregistrer Date de Dépôt"/>
            <Label x:Name="MontantFactureLabel" Text="Montant Facturé: " FontSize="20" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
